.root
  margin-bottom: 20px
  display: flex
  position: absolute
  top: -10000px

.icon
  height: 1.8em
  width: 1.8em
  background: white
  margin: 3px

.smallIcon
  composes: icon
  height: 1.4em
  width: 1.4em

.iconBold
  composes: smallIcon
  mask: url('../../svg/images/bold1.png') top left / cover

.iconItalic
  composes: smallIcon
  mask: url('../../svg/images/italic3.png') top left / cover

.iconUnderline
  composes: smallIcon
  mask: url('../../svg/images/underline3.png') top left / cover

.iconH1
  composes: icon
  mask: url('../../svg/images/h11.png') top left / cover

.iconH2
  composes: icon
  mask: url('../../svg/images/h21.png') top left / cover

.iconH3
  composes: icon
  mask: url('../../svg/images/h31.png') top left / cover
