.root
  text-align: left
  width: 100%
  max-width: 600px
  margin: auto
  margin-top: 10px
  padding: 20px
  padding-bottom: 20px
  background: white
  overflow: auto

.toolbar
  margin-bottom: 20px
  display: flex

.button
  flex: 1 0 auto
  background: #efefef;
  border: 1px solid darken(#efefef, 10%)
  padding: 5px
  font-size: 14px
  font-family: inherit

  &:not(:first-child)
    margin-left: -1px

  &:first-child
    border-radius: 5px 0 0 5px

  &:last-child
    border-radius: 0 5px 5px 0


// Content blocks
.imageFigure
  margin: 0
