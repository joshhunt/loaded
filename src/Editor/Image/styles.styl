.root
  position: relative
  display: inline-block
  background: grey

.alignNone
  content: 'hi'

.alignLeft
  width: 50%
  float: left

.alignRight
  width: 50%
  float: right

.controls
  font-size: 0
  border-radius: 3px
  position: absolute
  z-index: 20
  top: -45px
  left: 50%
  transform: translateX(-50%)
  opacity: 0
  transition: all 300ms ease-in-out

  .root:hover &
    opacity: 1

  &:after
    display: block
    content: ''
    border: 10px solid transparent
    width: 0
    height: 0
    margin-top: -1px
    border-top-color: #0E151B
    position: absolute
    bottom: -19px
    left: 50%
    margin-left: -10px
    z-index: 1

.button
  border: none
  background: #0E151B
  padding: 5px 10px
  font-size: 15px
  display: inline-block
  color: white
  z-index: 2
  transition: 150ms ease-in-out
  cursor: pointer

  &:first-child
    border-radius: 5px 0 0 5px

  &:last-child
    border-radius: 0 5px 5px 0

  &:hover
    background: lighten(#0E151B, 10%)

.image
  height: auto
  width: 100%
  position: relative
  z-index: 3
  transform: translate3d(0,0,0)

.iconAlign
  height: 1.5em
  width: 1.5em
  background: white

.iconAlignLeft
  composes: iconAlign
  mask: url('../../svg/float-left.svg') top left / cover;

.iconAlignNone
  composes: iconAlign
  height: 1.1em
  width: 1.1em
  margin: .2em
  mask: url('../../svg/float-none.svg') top left / cover;

.iconAlignRight
  composes: iconAlign
  mask: url('../../svg/float-right.svg') top left / cover;
